<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="463.0" prefWidth="722.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.controller.UserController">
	<center>
		<TabPane BorderPane.alignment="CENTER">
			<tabs>
				<Tab text="Ãœbersicht">
					<content>
                  <VBox>
                     <children>
                        <ToolBar nodeOrientation="LEFT_TO_RIGHT" prefHeight="40.0" prefWidth="200.0">
                          <items>
                            <Button mnemonicParsing="false" onAction="#onRefresh" prefHeight="25.0" prefWidth="81.0" text="Refresh" />
                              <ComboBox fx:id="searchComboBox" prefHeight="25.0" prefWidth="160.0" promptText="Feld" />
                              <TextField fx:id="searchField" promptText="Suchtext" />
                          </items>
                        </ToolBar>
      						<TableView fx:id="userTableView" editable="true" prefHeight="363.0" prefWidth="722.0">
      							<columns>
      							
      							<!-- id entspricht DB-Feldern -->
      								<TableColumn fx:id="idCol" prefWidth="75.0" text="Id" />
      								<TableColumn id="vorname" fx:id="vornameCol" onEditCommit="#onUpdate" prefWidth="75.0" text="Vorname" /><!-- id:vorname==DBFIELD -->
      								<TableColumn id="nachname" fx:id="nachnameCol" onEditCommit="#onUpdate" prefWidth="152.0" text="Nachname" />
      								<TableColumn id="email" fx:id="emailCol" onEditCommit="#onUpdate" prefWidth="142.0" text="E-Mail" />
      								<TableColumn fx:id="gebCol" prefWidth="184.0" text="Geburtsdatum" />
      							</columns>
      						</TableView>
                     </children>
                  </VBox>
					</content>
				</Tab>
				<Tab text="Neuer Datensatz">
					<content>
						<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
							<children>
								<TextField fx:id="vornameField" layoutX="130.0" layoutY="52.0" promptText="Vorname" />
								<TextField fx:id="nachnameField" layoutX="130.0" layoutY="96.0" promptText="Nachname" />
								<TextField fx:id="emailfield" layoutX="130.0" layoutY="136.0" promptText="E-Mail" />
								<DatePicker fx:id="gebField" layoutX="130.0" layoutY="187.0" promptText="Geburtsdatum" />
								<Button layoutX="331.0" layoutY="244.0" mnemonicParsing="false" onAction="#onSave" prefHeight="25.0" prefWidth="99.0" text="Save" />
							</children>
						</AnchorPane>
					</content>
				</Tab>

			</tabs>
		</TabPane>
	</center>
   <top>
		<Label fx:id="infoLabel" prefHeight="32.0" prefWidth="500.0" textFill="#800a0a">
			<font>
				<Font size="22.0" />
			</font>
		</Label>
   </top>
</BorderPane>
